<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativelayout_for_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tfguniovi.grande.peephole.MainActivity"
    tools:showIn="@layout/app_bar_main2"
    tools:layout_editor_absoluteY="137dp"
    tools:layout_editor_absoluteX="0dp">




        <Button
            android:id="@+id/video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="grabar"
            android:text="Video y Audio"
            android:layout_above="@+id/email"
            android:layout_centerHorizontal="true" />


        <Button
            android:id="@+id/cam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="camera"
            android:text="Camara"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:layout_marginBottom="11dp" />

        <Button
            android:id="@+id/lista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="list"
            android:text="Listar"
            android:layout_alignBaseline="@+id/video"
            android:layout_alignBottom="@+id/video"
            android:layout_alignLeft="@+id/cam"
            android:layout_alignStart="@+id/cam" />




        <Button
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="enviar"
            android:text="Email"
            android:layout_alignBaseline="@+id/cam"
            android:layout_alignBottom="@+id/cam"
            android:layout_alignLeft="@+id/video"
            android:layout_alignStart="@+id/video" />


    <Button
            android:id="@+id/end"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="fin"
            android:text="Finalizar"
            android:textAlignment="center"
            android:textStyle="bold"
        android:layout_alignBaseline="@+id/email"
        android:layout_alignBottom="@+id/email"
        android:layout_toRightOf="@+id/video"
        android:layout_toEndOf="@+id/video" />










</RelativeLayout>
