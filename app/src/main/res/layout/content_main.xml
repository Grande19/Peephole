<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cmain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tfguniovi.grande.peephole.MainActivity"
    tools:showIn="@layout/app_bar_main2"
    tools:layout_editor_absoluteY="137dp"
    tools:layout_editor_absoluteX="0dp">


    <Button
            android:id="@+id/cam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="camera"
        android:text="camara"
        android:layout_alignBottom="@+id/end"
        android:layout_alignRight="@+id/email"
        android:layout_alignEnd="@+id/email"
        android:layout_marginRight="64dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="31dp" />

        <Button
            android:id="@+id/lista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="list"
            android:text="Listar"
            android:layout_above="@+id/cam"
            android:layout_alignRight="@+id/end"
            android:layout_alignEnd="@+id/end"
            android:layout_marginRight="34dp"
            android:layout_marginEnd="34dp" />




        <Button
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="enviar"
            android:text="Email"
            android:layout_marginBottom="110dp"
            android:layout_above="@+id/lista"
            android:layout_toLeftOf="@+id/lista"
            android:layout_toStartOf="@+id/lista" />


    <Button
            android:id="@+id/end"
            android:layout_weight="1"
            android:onClick="fin"
            android:background="@color/common_google_signin_btn_text_dark_default"
            android:drawableRight="@mipmap/ic_launcher"
        android:layout_width="59dp"
        android:layout_height="54dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/comenzar"
        android:layout_weight="1"
        android:onClick="discover"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:drawableRight="@mipmap/backcircle"
        android:layout_width="59dp"
        android:layout_height="54dp"
        android:layout_alignBaseline="@+id/end"
        android:layout_alignBottom="@+id/end"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
